{
  "name": "django-erp-tailwind",
  "version": "1.0.0",
  "description": "Tailwind CSS build for Django ERP System",
  "scripts": {
    "build-css": "tailwindcss -i ./static/src/input.css -o ./staticfiles/css/tailwind.css --minify",
    "watch-css": "tailwindcss -i ./static/src/input.css -o ./staticfiles/css/tailwind.css --watch",
    "build": "npm run build-css"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10"
  }
}

